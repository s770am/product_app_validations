<h1><%= @product.name %></h1>
<%= link_to "back to home", products_path %>
<div>
     <p>name:<%= @product.name %></p>
     <p>price:<%= @product.price %></p>
     <p>rating:
     <% if @product.rating == nil %>
         none
         <% else %>
         <%= @product.rating %>
         <% end %>
    </p>
     <%= link_to "edit", edit_product_path(@product) %>
     <%= link_to "delete",  product_path(@product), method: :delete %>
</div>


<h2>Reviews</h2>
<%= link_to "add a review",  new_product_review_path(@product)%>
<ul>
<% @product.reviews.each do |r| %>
<li>
    <p>user: <%= r.user  %></p>
   <p>how good was it (out of 10): <%= r.review_rating  %></p> 
   <p>thoughts on the product: <%= r.review_text  %></p> 
   <%= link_to "delete this review", product_review_path(@product, r), method: :delete %>
</li>
<% end %>


</ul>

